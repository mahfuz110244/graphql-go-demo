type Book{
  id: ID!
  title: String!
  price: Int!
  isbn_no: String!
  author: Author!
}

type Author{
  id: ID!
  name:String!
  biography:String!
}

type Books {
  books: [Book]
}

type Query{
  bookByID(id: ID):Book
  allBooks:[Book]
  authorByID(id:ID):Author!
  allAuthors:[Author]!
  authors(name : String!): Books!
}

type Mutation{
  creatAuthor(name:String!, biography:String!):Author!
  createBook(title:String!, price:Int!, isbn_no:String!, author: ID!): Book!
}