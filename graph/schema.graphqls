type Book{
  id: ID!
  title: String!
  Author: Author!
}

type Author{
  id: ID!
  firstName:String!
  lastName:String!
}

type Books {
  books: [Book]
}

type Query{
  bookByID(id: ID):Book
  allBooks:[Book]
  authorByID(id:ID):Author!
  allAuthors:[Author]!
  # authors(name : String!): [Book]
  authors(name : String!): Books!
}

type Mutation{
  createBook(title:String!,Author: ID!): Book!
  creatAuthor(firstName:String!,lastName:String!):Author!
}